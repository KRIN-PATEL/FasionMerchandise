@{
    ViewData["Title"] = "Home";
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}


<div class="w-100" style="margin-bottom: 0; padding-bottom: 0;">
    <div id="fashionCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">

            <div class="carousel-item active">
                <img src="~/images/banner 1.png"
                     class="d-block w-100"
                     style="width: 100%; max-height: 400px; min-height: 250px; object-fit: cover;"
                     alt="Promo Banner" />
            </div>

            
            <div class="carousel-item">
                <img src="~/images/banner 5.jpg"
                     class="d-block w-100"
                     style="width: 100%; max-height: 400px; min-height: 250px; object-fit: cover;"
                     alt="Slide 2" />
            </div>

            
            <div class="carousel-item">
                <img src="~/images/banner 6.jpg"
                     class="d-block w-100"
                     style="width: 100%; max-height: 400px; min-height: 250px; object-fit: cover;"
                     alt="Slide 3" />
            </div>
        </div>

        <!-- Carousel Navigation -->
        <button class="carousel-control-prev" type="button" data-bs-target="#fashionCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#fashionCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
        </button>
    </div>
</div>


<div class="container mt-5 pt-4" style="background-color: #fffaf5; border-top: 2px solid #eee;">
    <h2 class="mb-4 text-center text-secondary">Trending Products</h2>
    <div class="row justify-content-center">
        @* Product Card Start *@
        @{
            var trendingProducts = new[]
            {
        new { Name = "BENYAR Mens Chronograph Watch", Price = "$49.98", Image = "/images/Product/benyers.jpg", Desc = "Classic design, waterproof & durable with sub-dials and quartz accuracy." },
        new { Name = "Nike Giannis Immortality 3", Price = "$99.99", Image = "/images/Product/nike.jpg", Desc = "Breathable mesh, strap stability & flexible foam midsole for court agility." },
        new { Name = "Ray-Ban Meta Glasses", Price = "$409.00", Image = "/images/Product/rayban.jpg", Desc = "Iconic Wayfarer design with smart AI, POV camera, music, and hands-free calls." },
        new { Name = "MISFAY Summer Dress", Price = "$89.99", Image = "/images/Product/MISFAY Women Summer Dresses.jpg", Desc = "Lightweight, breathable with V-neck, button front, and pockets." }
        };
        }

        @foreach (var item in trendingProducts)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4 d-flex">
                <div class="card shadow-sm border-0 rounded-4 w-100 d-flex flex-column">
                    <img src="@item.Image" alt="@item.Name" class="card-img-top rounded-top-4" style="height: 230px; object-fit: contain;" />
                    <div class="card-body d-flex flex-column">
                        <h6 class="fw-bold">@item.Name</h6>
                        <p class="text-muted small">@item.Desc</p>
                        <div class="mt-auto">
                            <p class="text-success fw-bold">@item.Price</p>
                            <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary rounded-pill w-100">Shop Now</a>
                        </div>
                    </div>
                </div>
            </div>
        }
        <h4 class="text-center text-secondary mb-4">Brands We Work With</h4>
        <div class="row justify-content-center align-items-center gx-4 gy-3 brand-logos">
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/nike.png" alt="Nike" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/adidas.png" alt="Adidas" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/Levis.jpg" alt="Levis" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/converse.png" alt="Converse" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/rayban.png" alt="RayBan" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/champion.png" alt="Champion" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/Calvin_Klein.png" alt="Calvin_Klein" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/Chaps.png" alt="Chaps" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/JCrew_Mercantile.png" alt="JCrew_Mercantile" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/Timberland.png" alt="Timberland" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/UnderArmour.png" alt="UnderArmour" class="img-fluid grayscale-hover" />
            </div>
            <div class="col-4 col-sm-3 col-md-2 col-lg-2 text-center">
                <img src="~/images/brands/NewBalance.png" alt="NewBalance" class="img-fluid grayscale-hover" />
            </div>
        </div>
    </div>
</div>



@section Scripts {
    <script>
        
        const carousel = document.querySelector('#fashionCarousel');
        if (carousel) {
            new bootstrap.Carousel(carousel, {
                interval: 3500,
                ride: 'carousel'
            });
        }
    </script>
}
