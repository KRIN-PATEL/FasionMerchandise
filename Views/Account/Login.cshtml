@model Group6_Fashion_Merchandise.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 bg-white p-4 shadow rounded-4 border border-1 border-secondary-subtle">
            <h3 class="mb-4 text-center fw-bold" style="color:#5a2a27;">
                <i class="bi bi-box-arrow-in-right me-2" style="color:#5a2a27;"></i>Welcome Back!
            </h3>

            @Html.ValidationSummary(true, "", new { @class = "text-danger text-center mb-3" })

            <form asp-action="Login" method="post" novalidate>
                <div class="mb-3">
                    <label asp-for="Email" class="form-label fw-semibold text-dark">
                        <i class="bi bi-envelope-fill me-1" style="color:#5a2a27;"></i> Email address
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label fw-semibold text-dark">
                        <i class="bi bi-lock-fill me-1" style="color:#5a2a27;"></i> Password
                    </label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <button type="submit" class="btn w-100 fw-bold text-white" style="background-color:#5a2a27;">
                    <i class="bi bi-check-circle-fill me-2"></i>Login
                </button>
            </form>

            <div class="text-center mt-3">
                <p class="text-dark">
                    Don't have an account?
                    <a asp-controller="Account" asp-action="Register" style="color:#5a2a27; font-weight: 500;">Register here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
