@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6 bg-white p-4 shadow rounded-4 border border-1 border-secondary-subtle">
            <h2 class="mb-4 text-center fw-bold" style="color:#5a2a27;">
                <i class="bi bi-person-plus-fill me-2" style="color:#5a2a27;"></i>Create an Account
            </h2>

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <form asp-action="Register" method="post">
                <div class="mb-3">
                    <label asp-for="FullName" class="form-label text-dark fw-semibold">
                        <i class="bi bi-person-fill me-1" style="color:#5a2a27;"></i> Full Name
                    </label>
                    <input asp-for="FullName" class="form-control" placeholder="Enter your full name" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label text-dark fw-semibold">
                        <i class="bi bi-envelope-fill me-1" style="color:#5a2a27;"></i> Email
                    </label>
                    <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-dark fw-semibold">
                        <i class="bi bi-lock-fill me-1" style="color:#5a2a27;"></i> Password
                    </label>
                    <input asp-for="Password" type="password" class="form-control" placeholder="Create a password" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Role" class="form-label text-dark fw-semibold">
                        <i class="bi bi-person-gear me-1" style="color:#5a2a27;"></i> Role
                    </label>
                    <select asp-for="Role" class="form-select">
                        <option value="">-- Select Role --</option>
                        <option value="Admin">Admin</option>
                        <option value="Customer">Customer</option>
                    </select>
                    <span asp-validation-for="Role" class="text-danger"></span>
                </div>

                <button type="submit" class="btn w-100 fw-bold text-white" style="background-color:#5a2a27;">
                    <i class="bi bi-check-circle-fill me-2"></i>Register
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
