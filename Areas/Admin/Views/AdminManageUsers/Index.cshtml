@model IEnumerable<Group6_Fashion_Merchandise.Models.ApplicationUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Manage Users";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="mb-4">
    <i class="bi bi-people-fill text-danger"></i> Manage Users
</h2>

<table class="table table-bordered align-middle table-hover shadow-sm">
    <thead class="table-light text-center">
        <tr>
            <th>Email</th>
            <th style="width: 200px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td class="text-break">@user.Email</td>
                <td class="text-center">
                    <div class="d-flex justify-content-center gap-2 flex-nowrap">
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">
                            <i class="bi bi-pencil-fill"></i> Edit Role
                        </a>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">
                            <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
