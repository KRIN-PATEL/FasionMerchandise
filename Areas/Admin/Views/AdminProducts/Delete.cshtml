@model Group6_Fashion_Merchandise.Models.Product
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Delete Product";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container my-5">
    <div class="bg-white p-5 shadow rounded-4 border border-1">
        <h3 class="fw-bold text-danger mb-4">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> Are you sure you want to delete this product?
        </h3>

        <div class="row">
            <div class="col-md-8">
                <p><strong><i class="bi bi-tag-fill me-1"></i> Name:</strong> @Model.Name</p>
                <p><strong><i class="bi bi-chat-left-text-fill me-1"></i> Description:</strong> @Model.Description</p>
                <p><strong><i class="bi bi-currency-dollar me-1"></i> Price:</strong> $@Model.Price</p>
            </div>

            <div class="col-md-4 text-center">
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <img src="@Model.ImagePath" class="img-fluid rounded shadow-sm" style="max-width: 150px;" alt="Product Image" />
                }
            </div>
        </div>

        <form asp-action="DeleteConfirmed" method="post" class="mt-4">
            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-3">
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash-fill me-1"></i> Delete
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
</div>
